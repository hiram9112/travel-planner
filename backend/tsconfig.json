{
  "compilerOptions": {
    // JavaScript version to which the code is compiled
    "target": "ES2020",

    // Module system used by Node.js in the backend
    "module": "CommonJS",

    // Folder where the TypeScript source code lives
    "rootDir": "src",

    // Folder where the compiled JavaScript is generated
    "outDir": "dist",

    // Enables strict type checking
    "strict": true,

    // Allows importing CommonJS libraries using modern syntax
    "esModuleInterop": true,

    // Skips type checking of dependency declaration files
    "skipLibCheck": true,

    // Enforces consistent casing in file name imports
    "forceConsistentCasingInFileNames": true
  }
}